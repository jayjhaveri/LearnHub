<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_spinner_linear_marginBottom"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_category_image"
        android:layout_width="@dimen/list_category_ci_category_width"
        android:layout_height="@dimen/list_category_ci_category_width"
        android:layout_gravity="center"
        android:padding="@dimen/list_spinner_ci_padding"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/list_textView_left_margin"
        android:layout_marginLeft="@dimen/list_textView_left_margin"
        android:layout_marginRight="@dimen/list_textView_left_margin"
        android:layout_marginStart="@dimen/list_textView_left_margin"
        tools:text="@string/app_name" />


</LinearLayout>


