<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.jayjhaveri.learnhub.Fragments.CommentFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:padding="4dp" />


    <EditText
        android:id="@+id/et_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:hint="@string/write_comment_video_detail"
        android:imeOptions="actionSend" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_send_comment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_send_black_24px"
        android:visibility="visible" />


</LinearLayout>
